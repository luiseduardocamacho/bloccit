<h1>All Posts</h1>
<% @posts.each_with_index do |post, index| %>
   <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <%if (index % 5 != 0)%>
          <%= link_to post.title, post %>
          <!-- <%='SPAM'%> -->
          <%else%>
          <%='SPAM'%>
          <%end%>
       </h4>
     </div>
   </div>
 <% end %>
