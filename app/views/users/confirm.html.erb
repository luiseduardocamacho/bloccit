<h1>Sign Up Confirmation</h1>

<h3>Are you sure these values are correct?</h3>

  <h5>
    Email: <%= @user.email %> <br>
    Name:  <%= @user.name %>
  </h5>

<div class="row">
  <div class="col-md-4", style = "width:auto;">
    <%= button_to "Yes", {:controller => "users", :action => "create", :params => params}, {class: 'btn btn-success', type:'button', style:'display:inline-block'} %>
    <%= button_to "No", new_user_path, {method: 'get', class: 'btn btn-default', type:'button', style:'display:inline-block'}%>
  </div>
</div>
