<h1><%= @sponsored.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= @sponsored.body %></p>
   </div>
   <div class="col-md-4">
     <%= link_to "Edit", edit_topic_sponsored_post_path(@sponsored.topic, @sponsored), class: 'btn btn-success' %>
     <%= link_to "Delete Post", [@sponsored.topic, @sponsored], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
   </div>
 </div>
